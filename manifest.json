{
    "manifest_version" : 2,
    "name" : "Blarb Text Extension",
    "version" : "0.1.0",
    "description" : "Adds blarb buttons to all text inputs",
    "permissions": [
        "activeTab",
        "tabs",
        "declarativeContent"
    ],
    "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "32": "icons/32.png",
        "16": "icons/16.png"
    },
    "content_scripts": [
        {
            "matches" : ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ]
}